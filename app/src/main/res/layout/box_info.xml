<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="8dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:id="@+id/box_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardTitle_T2"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false" />

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:id="@+id/box_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardTitle_T3"
                android:paddingLeft="12dp"
                android:paddingBottom="6dp"
                android:clickable="false" />

            <LinearLayout
                android:id="@+id/box_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
	
   <Button 
       android:id="@+id/load_raw_data_button"
       android:text="@string/load_raw_data"
       android:layout_width="wrap_content"
       android:layout_height="48dip"
       android:layout_gravity="center_horizontal" />

    <android.support.v7.widget.CardView
        android:id="@+id/raw_data_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="8dp"
        app:contentPadding="8dp"
        android:visibility="invisible">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardTitle_T2"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false"
                android:text="@string/raw_data" />

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardKey"
                android:paddingLeft="24dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false"
                android:text="@string/bytes_key" />

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:id="@+id/byte_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardValue"
                android:paddingLeft="24dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false" />

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardKey"
                android:paddingLeft="24dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false"
                android:text="@string/string_key" />

            <com.roryhool.videoinfoviewer.views.RobotoTextView
                android:id="@+id/string_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardValue"
                android:paddingLeft="24dp"
                android:paddingBottom="0dp"
                android:paddingTop="4dp"
                android:clickable="false" />

       </LinearLayout>

    </android.support.v7.widget.CardView>
	
</LinearLayout>