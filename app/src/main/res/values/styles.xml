<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/white_grey</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="AppTheme.ThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:actionModeBackground">@color/primary</item>
        <item name="actionModeBackground">@color/primary</item>
        <item name="android:actionModeSplitBackground">@color/primary</item>
        <item name="actionModeSplitBackground">@color/primary</item>
        <item name="android:colorBackground">@color/primaryDark</item>
        <item name="popupTheme">@style/AppTheme.ThemeOverlay.ActionBar.PopupTheme</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MenuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.MenuTextStyle</item>
    </style>

    <style name="AppTheme.ThemeOverlay.ActionBar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white_grey</item>
        <item name="android:colorBackground">@color/white_grey</item>
    </style>

    <style name="AppTheme.MenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:background">@color/white_grey</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="CardTitle_T1" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardTitle_T2" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardTitle_T3" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardTitle_T4" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardKey" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardValue" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardKeyOneLine" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="CardValueOneLine" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">14sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

</resources>