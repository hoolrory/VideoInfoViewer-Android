<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.roryhool.videoinfoviewer.views.RobotoTextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CardTitle_T3"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="4dp"
        android:clickable="false" />
       
   <com.roryhool.videoinfoviewer.views.RobotoTextView
       android:id="@+id/search_item_description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@style/CardTitle_T4"
       android:paddingLeft="0dp"
       android:paddingBottom="0dp"
       android:layout_below="@+id/search_item_title"
       android:clickable="false" />
       
</RelativeLayout>