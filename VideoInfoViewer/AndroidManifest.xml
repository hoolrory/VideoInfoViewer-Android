<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roryhool.videoinfoviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.roryhool.videoinfoviewer.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
		   android:name="com.roryhool.videoinfoviewer.VideoActivity_"
		   android:label="View Video Info">
		
		      <intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SHARE" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
		        <data android:mimeType="video/*" />
		      </intent-filter>
		</activity>
    </application>

</manifest>
